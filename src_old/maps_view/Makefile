PROJECT_NAME=maps
BUILD_FOLDER=build
MAKE_FLAGS=-j4
CMAKE_FOLDER=.
EXEC_FOLDER=.

all: install start

install:
	cmake -S $(CMAKE_FOLDER) -B $(BUILD_FOLDER)
	make -C $(BUILD_FOLDER) $(MAKE_FLAGS)
	mv $(BUILD_FOLDER)/$(PROJECT_NAME) $(EXEC_FOLDER)

start:
	./$(EXEC_FOLDER)/$(PROJECT_NAME) 

clean:
	rm -rf $(BUILD_FOLDER)/*
	rm -f $(EXEC_FOLDER)/$(PROJECT_NAME) 